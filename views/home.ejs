	<!--Trigger-->
<btn class="login-trigger btn btn-lg" style="background-color: orange; color: white" href="#" data-target="#login" data-toggle="modal">Login</btn>
<btn class="login-trigger btn btn-lg" style="background-color: orange; color: white" href="#" data-target="#signup" data-toggle="modal">Sign Up</btn>

<div id="login" class="modal fade" role="dialog">
  <div class="modal-dialog">
    
    <div class="modal-content">
      <div class="modal-body">
        <button data-dismiss="modal" class="close">&times;</button>
        <h4>Login</h4>
        <form method="post" action="/login">
          <input type="text" name="email" class="username form-control" placeholder="Email-ID"/>
          <input type="password" name="password" class="password form-control" placeholder="Password"/>
          <!-- <input class="btn login" type="submit" value="Login" /> -->
		  <button type="submit" style="border:orange; background-color: orange; color: white" class="btn login">Submit</button>
        </form>
      </div>
    </div>
  </div>  
</div>
</div>

<!-- <btn class="login-trigger btn btn-outline-light btn-lg" href="#" data-target="#login" data-toggle="modal">Sign Up</btn> -->

<div id="signup" class="modal fade" role="dialog">
  <div class="modal-dialog">
    
    <div class="modal-content">
      <div class="modal-body">
        <button data-dismiss="modal" class="close">&times;</button>
        <h4 style="text-align: center;">Sign Up</h4>
        <form method="post" action="/signup">
          <input type="text" name="name" class="username form-control" placeholder="Name"/>
		  <input type="text" name="rollno" class="username form-control" placeholder="Roll No.">
		  <input type="text" name="contact" class="username form-control" placeholder="Contact No.">
		  <input type="text" name="emailID" class="username form-control" placeholder="Email-ID">
          <input type="password" name="password" class="password form-control" placeholder="Set Password"/>
          <!-- <input class="btn login" type="submit" value="Login" /> -->
		  <button type="submit" style="border:orange; background-color: orange; color: white;" class="btn signup">Submit</button>
        </form>
      </div>
    </div>
  </div>  
</div>
</div>

